<Window x:Class="GestorDeDrones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorDeDrones"
        xmlns:viewmodels="clr-namespace:GestorDeDrones.ViewModels"
        mc:Ignorable="d"
        Title="Gestor de Drones" Height="450" Width="800">

    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Drones}"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  Margin="0,40,0,0"
                  SelectedItem="{Binding SelectedDrone}">

            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick"
                              Command="{Binding OpenDetailsCommand}"
                              CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}}" />
            </DataGrid.InputBindings>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Marca" Binding="{Binding Marca}" Width="*" />
                <DataGridTextColumn Header="Modelo" Binding="{Binding Modelo}" Width="*" />
                <DataGridTextColumn Header="Nº de Serie" Binding="{Binding NumeroSerie}" Width="*" />
                <DataGridTextColumn Header="Peso (g)" Binding="{Binding Peso}" Width="*" />
                <DataGridTextColumn Header="Clase" Binding="{Binding Clase}" Width="*" />
                <DataGridTextColumn Header="Año" Binding="{Binding Anio}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Content="Añadir Nuevo Dron" Margin="0,0,10,0" Command="{Binding AddDroneCommand}"/>
        </StackPanel>
    </Grid>
</Window>