<Window x:Class="GestorDeDrones.Views.AddDroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:GestorDeDrones.ViewModels"
        mc:Ignorable="d"
        Title="Añadir Nuevo Dron" Height="400" Width="400">

    <Window.DataContext>
        <viewmodels:AddDroneViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Marca:" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0,5" Text="{Binding NewDrone.Marca}"/>

        <Label Content="Modelo:" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,5" Text="{Binding NewDrone.Modelo}"/>

        <Label Content="Nº de Serie:" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,5" Text="{Binding NewDrone.NumeroSerie}"/>

        <Label Content="Peso (g):" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="0,5" Text="{Binding NewDrone.Peso}"/>

        <Label Content="Clase:" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="0,5" Text="{Binding NewDrone.Clase}"/>

        <Label Content="Año:" Grid.Row="5" Grid.Column="0" Margin="0,5"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="0,5" Text="{Binding NewDrone.Anio}"/>

        <Button Content="Guardar Dron" Grid.Row="7" Grid.ColumnSpan="2" Margin="0,20,0,0"
                Command="{Binding SaveCommand}"/>
    </Grid>
</Window>