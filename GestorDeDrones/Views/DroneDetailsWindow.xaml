<Window x:Class="GestorDeDrones.Views.DroneDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorDeDrones.Views"
        xmlns:viewmodels="clr-namespace:GestorDeDrones.ViewModels"
        mc:Ignorable="d"
        Title="Detalles del Dron" Height="600" Width="800">

    <Window.DataContext>
        <viewmodels:DroneDetailsViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="{Binding Drone.Marca}" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="{Binding Drone.Modelo}" FontSize="18"/>
            <TextBlock Text="{Binding Drone.NumeroSerie}"/>
        </StackPanel>

        <TabControl Grid.Row="1" Margin="0,10,0,0">
            <TabItem Header="Baterías">
                <StackPanel>
                    <DataGrid ItemsSource="{Binding Drone.Baterias}" AutoGenerateColumns="True" IsReadOnly="True"/>
                    <Button Content="Añadir Batería" Margin="0,10,0,0" Command="{Binding AddBatteryCommand}"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Mandos">
                <StackPanel>
                    <DataGrid ItemsSource="{Binding Drone.Mandos}" AutoGenerateColumns="True" IsReadOnly="True"/>
                    <Button Content="Añadir Mando" Margin="0,10,0,0" Command="{Binding AddControllerCommand}"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Otros Accesorios">
                <StackPanel>
                    <DataGrid ItemsSource="{Binding Drone.Accesorios}" AutoGenerateColumns="True" IsReadOnly="True"/>
                    <Button Content="Añadir Accesorio" Margin="0,10,0,0" Command="{Binding AddAccessoryCommand}"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>